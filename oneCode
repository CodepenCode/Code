    <script>
        let thumbsSwiper, mainSwiper;

        document.getElementById('photoModal')
            .addEventListener('shown.bs.modal', function () {

                thumbsSwiper = new Swiper(".mySwiper", {
                    spaceBetween: 10,
                    slidesPerView: "auto",
                    watchSlidesProgress: true,
                });

                mainSwiper = new Swiper(".mySwiper2", {
                    navigation: {
                        nextEl: ".swiper-button-next",
                        prevEl: ".swiper-button-prev",
                    },
                    thumbs: {
                        swiper: thumbsSwiper,
                    },
                });

            });



        $('.owl-carousel').owlCarousel({
            loop: true,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                480: {
                    items: 2
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 4
                }
            }
        });
        owl.on('mousewheel', '.owl-stage', function (e) {
            if (e.deltaY > 0 || (e.originalEvent && e.originalEvent.wheelDelta > 0)) {
                owl.trigger('next.owl');
            } else {
                owl.trigger('prev.owl');
            }
            e.preventDefault();
        });
    </script>
</body>

</html>
